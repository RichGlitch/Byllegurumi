<h1 align="center">Categorías</h1>

<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="tituloCategoria">
          <%= link_to "#{category.name}", category_path(category) %> 
        </li>
        <li align="center"><small ><%= pluralize(category.articles.count, "Artículo") %></small></li>
      </div>
    </div>
  </ul>
<% end %>

<%= will_paginate %> 