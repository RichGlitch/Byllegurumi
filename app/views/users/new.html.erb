<%= render 'shared/errors', obj: @user %>
<h1 align="center">Sign Up</h1>
<div class='row center '>
  <div class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 center form_signup'>
    <%= form_for( @user, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="control-label col-xs-1 col-xs-offset-1 ">
          <%= f.label :username %>
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-md-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Nombre de usuario", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-xs-1 col-xs-offset-1 ">
          <%= f.label :email %>
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-md-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Email de usuario", autofocus: true%>
      </div>
    </div>
     <div class="form-group">
      <div class="control-label col-xs-1 col-xs-offset-1 ">
          <%= f.label :password %>
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-md-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Password de usuario", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg col-xs-10 col-xs-offset-1' %>
      </div>
    </div>
    
    <% end %>
  </div>
</div>

<div class="pagination">
  <%= link_to "Back to articles listing" ,  articles_path %>
</div>