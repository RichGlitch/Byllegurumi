<%= render 'shared/errors', obj: @article %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for( @article, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
          <%= f.label :titulo %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :titulo, class: "form-control", placeholder: "Titulo del articulo", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
          <%= f.label :subtitulo %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :subtitulo, class: "form-control", placeholder: "Subtitulo del articulo", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :patron %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :patron, rows: 10, class: "form-control", placeholder: "Contenido del articulo", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    
    <% end %>
  </div>
</div>

<div class="pagination">
  <%= link_to "Back to articles listing" ,  articles_path %>
</div>